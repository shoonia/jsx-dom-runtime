{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "jsxImportSource": "jsx-dom-runtime",
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "lib": [
      "ES2024",
      "DOM"
    ],
    "paths": {
      "jsx-dom-runtime": [".."],
      "jsx-dom-runtime/jsx-runtime": [".."],
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}

{
  "compilerOptions": {
    "checkJs": true,
    "allowJs": true,
    "esModuleInterop": true,
    "sourceMap": false,
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "jsxImportSource": "jsx-dom-runtime",
    "lib": [
      "ES2022",
      "DOM"
    ],
  },
  "include": [
    "./tests/**/*.ts",
    "./tests/**/*.tsx",
    "./src/**/*.ts"
  ]
}

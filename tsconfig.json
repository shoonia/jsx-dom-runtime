{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "sourceMap": false,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "jsxImportSource": "jsx-dom-runtime",
    "skipLibCheck": true,
    "lib": [
      "ES2023",
      "DOM"
    ],
    "paths": {
      "jsx-dom-runtime": ["."],
      "jsx-dom-runtime/jsx-runtime": ["."],
      "jsx-dom-runtime/plugins/*": ["./plugins/*"],
    }
  },
  "include": [
    "./tests/**/*.ts",
    "./tests/**/*.tsx",
    "./src/**/*.ts"
  ],
  "exclude": [
    "babel-preset/",
    "DEMO/",
    "jsx-runtime/",
    "node_modules/"
  ]
}

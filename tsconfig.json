{
  "compilerOptions": {
    "checkJs": true,
    "allowJs": true,
    "esModuleInterop": true,
    "sourceMap": false,
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "Node",
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "jsxImportSource": ".",
    "lib": [
      "ES2021",
      "DOM"
    ],
  },
  "include": [
    "./tests/**/*.ts",
    "./tests/**/*.tsx"
  ]
}
